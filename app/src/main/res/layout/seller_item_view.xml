<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="#DFE2E3"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold"
            android:id="@+id/product_seller_name"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_seller_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:id="@+id/product_seller_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/product_seller_image"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:id="@+id/product_seller_price"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/product_seller_price"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:id="@+id/product_seller_description"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Status"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/product_seller_description"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:id="@+id/seller_product_status"/>



    </RelativeLayout>

</RelativeLayout>