<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordAcivity"
    android:background="#009688">
    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/design_default_color_primary"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password "
            android:textColor="#232222"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>


    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative123"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#232222"
        android:background="@drawable/inputs_design"
        android:hint="Please write your phone number"
        android:padding="14dp" />


    <TextView
        android:id="@+id/title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following security  questions"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="#232222"
        android:layout_below="@+id/find_phone_number"
        android:layout_marginTop="15dp"/>

    <EditText

        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_question"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="#232222"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs_design"
        android:hint="Where did you meet your first girlfriend??"
        android:padding="14dp" />

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="#232222"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs_design"
        android:hint="What was the name of your first girlfriend??"
        android:padding="14dp" />


    <Button
        android:layout_below="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:text="Verify"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/verify_btn"/>


</RelativeLayout>